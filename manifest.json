{
    "manifest_version": 3,
    "name": "HotClaude",
    "version": "1.0",
    "description": "Keyboard hotkeys/shortcuts for Anthropic's Claude",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://claude.ai/chat/*", "https://claude.ai/new"],
        "js": ["content.js"]
      }
    ]
}
